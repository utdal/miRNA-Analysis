// Config for modules

process{

    withName: FASTQC_RAW {
        ext.args = '--quiet'
    }

    withName: FASTQC_TRIM {
        ext.args = '--quiet'
    }

    // TODO determine whether to make this user specified 
    withName: CUTADAPT_ADAPTER {
        ext.args = '-a TGGAATTCTCGGGTGCCAAGG \
        --minimum-length 24'
    }

    withName: CUTADAPT_EXTRA {
        ext.args = '--cut 4 \
        --cut -4'
    }
}